<%= form_with(model: artist, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, class: "form-label"%>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birth,class: "form-label" %>
    <%= form.date_field :dob, min: 100.years.ago.to_date, max: Date.today, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :gender, class: "form-label" %>
    <%= form.select :gender, User.genders.keys.map { |gender| [gender.capitalize, User.genders[gender]] } , class: "form-control"%>
  </div>

 <div class="form-group">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :first_release_year, class: "form-label"%>
    <%= form.text_field :first_release_year, max: Date.today.year, class: "form-control", placeholder: "YYYY" %>
  </div>

  <div class="form-group">
    <%= form.label :no_of_albums_released, class: "form-label"%>
    <%= form.number_field :no_of_albums_released, class: "form-control", min: 0%>
  </div>

  <div class="form-actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>

