<%= form_with(model: [@artist, @song], url: @song.persisted? ? artist_song_path(@artist, @song) : artist_songs_path(@artist), method: @song.persisted? ? :patch : :post) do |form| %>
 <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :album_name, class: "form-label" %>
    <%= form.text_field :album_name, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :genre, class: "form-label" %>
    <%= form.select :genre, Song.genres.keys.map { |genre| [genre.capitalize, Song.genres[genre]] }, class: "form-control" %>
  </div>
 
  <div class="form-actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  <div>
<% end %>