<h1>Login</h1>
<%= form_tag login_path, method: :post do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag 'Login' %>
<% end %>
<%= link_to 'Register', register_path %>