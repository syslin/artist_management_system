<%= form_with(model: @user, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :first_name, class: "form-label"%>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birth,class: "form-label" %>
    <%= form.date_field :dob, min: 100.years.ago.to_date, max: Date.today, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :gender, class: "form-label" %>
    <%= form.select :gender, User.genders.keys.map { |gender| [gender.capitalize, User.genders[gender]] } , class: "form-control"%>
  </div>

 <div class="form-group">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_field :phone, maxlength: 13, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :role, class: "form-label" %>
    <%= form.select :role, User.roles.keys.map { |role| [role.capitalize, User.roles[role]] } , class: "form-control"%>
  </div>

  <div class="form-actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>

